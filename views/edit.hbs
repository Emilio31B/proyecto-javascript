<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="card">
                        <form action="/links/edit/:{{link.id}}" method="POST">
                            <div class="form-group">
                                <input type="text" value="{{link.tittle}}" class="form-control" name="tittle" placeholder="Title" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="url" name="url" value="{{link.url}}" class="form-control" placeholder="URL">
                            </div>
                            <div class="form-group">
                                <textarea name="description" rows="12" class="form-control" placeholder="Description">{{link.description}}</textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    <b>SAVE</b>
                                </button>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>